{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "title": "Super Metroid Connection Pathway Schema",
  "items": {
    "$id": "#/items",
    "type": "object",
    "title": "Connection Pathway Object",
    "required": [
      "area",
      "subarea",
      "id",
      "connections"
    ],
    "properties": {
      "area": {
        "$id": "#/items/properties/area",
        "type": "string",
        "title": "Area Name",
        "default": "",
        "examples": [
          "Brinstar"
        ],
        "pattern": "^(.*)$"
      },
      "subarea": {
        "$id": "#/items/properties/subarea",
        "type": "string",
        "title": "Area Subname",
        "default": "",
        "examples": [
          "Blue"
        ],
        "pattern": "^(.*)$"
      },
      "id": {
        "$id": "#/items/properties/id",
        "type": "integer",
        "title": "Room ID",
        "description": "Room ID in which the connections exist",
        "default": 0,
        "examples": [
          38
        ]
      },
      "connections": {
        "$id": "#/items/properties/connections",
        "type": "array",
        "title": "Connections; To + From",
        "items": {
          "$id": "#/items/properties/connections/items",
          "type": "object",
          "title": "The Items Schema",
          "required": [
            "id",
            "to"
          ],
          "properties": {
            "id": {
              "$id": "#/items/properties/connections/items/properties/id",
              "type": "integer",
              "title": "Node ID being linked from",
              "default": 0,
              "examples": [
                1
              ]
            },
            "to": {
              "$id": "#/items/properties/connections/items/properties/to",
              "type": "object",
              "title": "Node being linked to",
              "required": [
                "area",
                "subarea",
                "id"
              ],
              "properties": {
                "area": {
                  "$id": "#/items/properties/connections/items/properties/to/properties/area",
                  "type": "string",
                  "title": "Area Name",
                  "default": "",
                  "examples": [
                    "Brinstar"
                  ],
                  "pattern": "^(.*)$"
                },
                "subarea": {
                  "$id": "#/items/properties/connections/items/properties/to/properties/subarea",
                  "type": "string",
                  "title": "Area Subname",
                  "default": "",
                  "examples": [
                    "Green"
                  ],
                  "pattern": "^(.*)$"
                },
                "id": {
                  "$id": "#/items/properties/connections/items/properties/to/properties/id",
                  "type": "integer",
                  "title": "Room ID that this node links to",
                  "default": 0,
                  "examples": [
                    54
                  ]
                },
                "note": {
                  "$id": "#/items/properties/connections/items/properties/to/properties/note",
                  "type": "string",
                  "title": "The Note Schema",
                  "default": "",
                  "examples": [
                    "Room ID that this node within this Room connects to"
                  ],
                  "pattern": "^(.*)$"
                }
              }
            },
            "note": {
              "$id": "#/items/properties/connections/items/properties/note",
              "type": "string",
              "title": "The Note Schema",
              "default": "",
              "examples": [
                "Node ID of node within Room ID"
              ],
              "pattern": "^(.*)$"
            }
          }
        }
      },
      "note": {
        "$id": "#/items/properties/note",
        "type": "string",
        "title": "The Note Schema",
        "default": "",
        "examples": [
          "Room ID"
        ],
        "pattern": "^(.*)$"
      }
    }
  }
}
