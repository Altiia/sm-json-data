{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://raw.githubusercontent.com/miketrethewey/sm-json-data/master/schema/m3-enemies.schema.json",

  "definitions": {
    "enemyDrops": {
      "type": "object",
      "title": "Enemy Drop Rates",
      "description": "Describes the drop table for the enemy. All individual values are out of 102.",
      "required": [
        "noDrop",
        "smallEnergy",
        "bigEnergy",
        "missile",
        "super",
        "powerBomb"
      ],
      "additionalProperties": false,
      "properties": {
        "noDrop": {
          "$id": "#/properties/enemies/items/properties/drops/properties/no-drop",
          "type": "number",
          "title": "No Drop Rate",
          "description": "Odds of dropping nothing (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        },
        "smallEnergy": {
          "$id": "#/properties/enemies/items/properties/drops/properties/small-energy",
          "type": "number",
          "title": "Small Energy Drop Rate",
          "description": "Odds of dropping small energy (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        },
        "bigEnergy": {
          "$id": "#/properties/enemies/items/properties/drops/properties/big-energy",
          "type": "number",
          "title": "Big Energy Drop Rate",
          "description": "Odds of dropping big energy (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        },
        "missile": {
          "$id": "#/properties/enemies/items/properties/drops/properties/missile",
          "type": "number",
          "title": "Missile Drop Rate",
          "description": "Odds of dropping missiles (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        },
        "super": {
          "$id": "#/properties/enemies/items/properties/drops/properties/super",
          "type": "number",
          "title": "Super Missile Drop Rate",
          "description": "Odds of dropping super missiles (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        },
        "powerBomb": {
          "$id": "#/properties/enemies/items/properties/drops/properties/powerbomb",
          "type": "number",
          "title": "Power Bomb Drop Rate",
          "description": "Odds of dropping power bombs (out of 102)",
          "default": 0.0,
          "examples": [
            0.0
          ]
        }
      }
    }
  },

  "type": "object",
  "title": "Super Metroid Enemy Schema",
  "properties": {
    "enemies": {
      "type": "array",
      "items": {
        "$id": "#/properties/enemies/items",
        "type": "object",
        "title": "Enemy Object",
        "description": "An object that describes one enemy in Super Metroid",
        "required": [
          "id",
          "name",
          "attacks",
          "hp",
          "amountOfDrops",
          "drops",
          "dims",
          "freezable",
          "grapplable",
          "invul",
          "mult"
        ],
        "properties": {
          "id": {
            "$id": "#/properties/enemies/items/properties/id",
            "type": "integer",
            "title": "Enemy ID",
            "description": "Identifier for this enemy, unique across the entire game",
            "default": 0,
            "examples": [
              1
            ]
          },
          "name": {
            "$id": "#/properties/enemies/items/properties/name",
            "type": "string",
            "title": "Enemy Name",
            "description": "The enemy's name. Should be as it appears in the SuperMetroid.run wiki, except for enemies that are not present there. Intended to be unique and used as a recognizable ID.",
            "default": "",
            "examples": [
              "Beetom"
            ],
            "pattern": "^(.*)$"
          },
          "attacks": {
            "$id": "#/properties/enemies/items/properties/attacks",
            "type": "array",
            "title": "Enemy Attacks",
            "description": "An array of attacks the enemy can do",
            "items": {
              "$id": "#/properties/enemies/items/properties/attacks/items",
              "type": "object",
              "title": "Enemy Attack",
              "description": "An attack the enemy can do",
              "required": [
                "name",
                "baseDamage"
              ],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "$id": "#/properties/enemies/items/properties/attacks/items/properties/name",
                  "type": "string",
                  "title": "Attack Name",
                  "default": "contact",
                  "description": "The name of the attack",
                  "pattern": "^(.*)$"
                },
                "baseDamage": {
                  "$id": "#/properties/enemies/items/properties/attacks/items/properties/baseDamage",
                  "type": "integer",
                  "default": 0,
                  "title": "Base Damage",
                  "description": "The base damage (with only power suit) the attack does to Samus"
                },
                "affectedByVaria": {
                  "$id": "#/properties/enemies/items/properties/attacks/items/properties/affectedByVaria",
                  "type": "boolean",
                  "title": "Affected by Varia",
                  "description": "Indicates whether Varia applies a damage reduction on this attack. If missing, should be assumed to be true."
                },
                "affectedByGravity": {
                  "$id": "#/properties/enemies/items/properties/attacks/items/properties/affectedByGravity",
                  "type": "boolean",
                  "title": "Affected by Gravity",
                  "description": "Indicates whether Gravity Suit applies a damage reduction on this attack. If missing, should be assumed to be true."
                }
              }
            }
          },
          "hp": {
            "$id": "#/properties/enemies/items/properties/hp",
            "type": "integer",
            "title": "Enemy HP",
            "description": "Amount of health points that the Enemy has",
            "default": 0,
            "examples": [
              50
            ]
          },
          "amountOfDrops": {
            "$id": "#/properties/enemies/items/properties/amountOfDrops",
            "type": "integer",
            "title": "Amount of Drops",
            "description": "Amount of drops the enemy leaves behind",
            "default": 1,
            "examples": [
              16
            ]
          },
          "note": {
            "$ref" : "m3-note.schema.json#/definitions/note",
            "$id": "#/properties/enemies/items/properties/note"
          },
          "drops": {
            "$ref" : "#/definitions/enemyDrops",
            "$id": "#/properties/enemies/items/properties/drops",
            "title": "Enemy Drops",
            "description": "Describes the drop table for the enemy. All individual values are out of 102."
          },
          "farmableDrops": {
            "$ref" : "#/definitions/enemyDrops",
            "$id": "#/properties/enemies/items/properties/farmableDrops",
            "title": "Farmable Particle Drop Rates",
            "description": "Describes the drop table for farmable particles spawned by the enemy. All individual values are out of 102."
          },
          "dims": {
            "$id": "#/properties/enemies/items/properties/dims",
            "type": "object",
            "title": "Enemy Sprite Dimensions",
            "description": "Dimensions in pixels",
            "required": [
              "w",
              "h"
            ],
            "additionalProperties": false,
            "properties": {
              "w": {
                "$id": "#/properties/enemies/items/properties/dims/properties/w",
                "type": "integer",
                "title": "Width",
                "description": "Width of the enemy (in pixels)",
                "default": 0,
                "examples": [
                  8
                ]
              },
              "h": {
                "$id": "#/properties/enemies/items/properties/dims/properties/h",
                "type": "integer",
                "title": "Height",
                "description": "Height of the enemy (in pixels)",
                "default": 0,
                "examples": [
                  8
                ]
              },
              "note": {
                "$ref" : "m3-note.schema.json#/definitions/note",
                "$id": "#/properties/enemies/items/properties/note"
              }
            }
          },
          "freezable": {
            "$id": "#/properties/enemies/items/properties/freezable",
            "type": "boolean",
            "title": "Freezable?",
            "description": "Can this Enemy be frozen by Ice Beam?",
            "default": false,
            "examples": [
              false
            ]
          },
          "grapplable": {
            "$id": "#/properties/enemies/items/properties/grapplable",
            "type": "boolean",
            "title": "Grapplable?",
            "description": "Can Samus latch on to this enemy using Grapple beam?",
            "default": false
          },
          "farmable": {
            "$id": "#/properties/enemies/items/properties/farmable",
            "type": "boolean",
            "title": "Farmable?",
            "description": "Can this enemy respawn over and over? If this is missing, it should be assumed to be false.",
            "default": false
          },
          "invul": {
            "$id": "#/properties/enemies/items/properties/invul",
            "type": [ "array" ],
            "title": "Invulnerability",
            "description": "A list containing weapons and weapon categories that can't damage this enemy",
            "default": [],
            "items": {
              "type": "string",
              "pattern": "^(.*)$"
            }
          },
          "mult": {
            "$id": "#/properties/enemies/items/properties/mult",
            "type": "object",
            "title": "Damage Multipliers",
            "description": "A list containing weapons and weapon categories, alongside a weapon multiplier that is applied to the base damage for that enemy",
            "default": {}
          }
        }
      }
    }
  }
}
