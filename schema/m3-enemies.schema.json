{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://raw.githubusercontent.com/miketrethewey/sm-json-data/master/schema/m3-enemies.schema.json",
  "type": "object",
  "title": "Super Metroid Enemy Schema",
  "properties": {
    "enemies": {
      "type": "array",
      "items": {
        "$id": "#/items",
        "type": "object",
        "title": "Enemy Object",
        "description": "An object that describes one enemy in Super Metroid",
        "required": [
          "id",
          "name",
          "attacks",
          "hp",
          "amountOfDrops",
          "drops",
          "dims",
          "freezable",
          "invul",
          "mult"
        ],
        "properties": {
          "id": {
            "$id": "#/items/properties/id",
            "type": "integer",
            "title": "Enemy ID",
            "description": "Identifier for this enemy, unique across the entire game",
            "default": 0,
            "examples": [
              1
            ]
          },
          "name": {
            "$id": "#/items/properties/name",
            "type": "string",
            "title": "Enemy Name",
            "description": "The enemy's name. Should be as it appears in the SuperMetroid.run wiki, except for enemies that are not present there. Intended to be unique and used as a recognizable ID.",
            "default": "",
            "examples": [
              "Beetom"
            ],
            "pattern": "^(.*)$"
          },
          "attacks": {
            "$id": "#/items/properties/attacks",
            "type": "object",
            "title": "Enemy Attacks"
          },
          "hp": {
            "$id": "#/items/properties/hp",
            "type": "integer",
            "title": "Enemy HP",
            "description": "Amount of health points that the Enemy has",
            "default": 0,
            "examples": [
              50
            ]
          },
          "amountOfDrops": {
            "$id": "#/items/properties/amountOfDrops",
            "type": "integer",
            "title": "Amount of Drops",
            "description": "Amount of drops the enemy leaves behind",
            "default": 1,
            "examples": [
              16
            ]
          },
          "note": {
            "$id": "#/items/properties/note",
            "type": ["string", "array"],
            "title": "Note Field",
            "default": "",
            "pattern": "^(.*)$"
          },
          "drops": {
            "$id": "#/items/properties/drops",
            "type": "object",
            "title": "Enemy Drop Rates",
            "description": "Describes the drop table for the enemy. All individual values are out of 102.",
            "required": [
              "no-drop",
              "small-energy",
              "big-energy",
              "missile",
              "super",
              "powerbomb"
            ],
            "properties": {
              "no-drop": {
                "$id": "#/items/properties/drops/properties/no-drop",
                "type": "number",
                "title": "% of Nothing",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "small-energy": {
                "$id": "#/items/properties/drops/properties/small-energy",
                "type": "number",
                "title": "% of Small Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "big-energy": {
                "$id": "#/items/properties/drops/properties/big-energy",
                "type": "number",
                "title": "% of Big Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "missile": {
                "$id": "#/items/properties/drops/properties/missile",
                "type": "number",
                "title": "% of Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "super": {
                "$id": "#/items/properties/drops/properties/super",
                "type": "number",
                "title": "% of Super Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "powerbomb": {
                "$id": "#/items/properties/drops/properties/powerbomb",
                "type": "number",
                "title": "% of Power Bombs",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              }
            }
          },
          "farmableDrops": {
            "$id": "#/items/properties/farmableDrops",
            "type": "object",
            "title": "Farmable Particle Drop Rates",
            "description": "Describes the drop table for farmable particles spawned by the enemy. All individual values are out of 102.",
            "required": [
              "no-drop",
              "small-energy",
              "big-energy",
              "missile",
              "super",
              "powerbomb"
            ],
            "properties": {
              "no-drop": {
                "$id": "#/items/properties/farmableDrops/properties/no-drop",
                "type": "number",
                "title": "% of Nothing",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "small-energy": {
                "$id": "#/items/properties/farmableDrops/properties/small-energy",
                "type": "number",
                "title": "% of Small Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "big-energy": {
                "$id": "#/items/properties/farmableDrops/properties/big-energy",
                "type": "number",
                "title": "% of Big Energy",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "missile": {
                "$id": "#/items/properties/farmableDrops/properties/missile",
                "type": "number",
                "title": "% of Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "super": {
                "$id": "#/items/properties/farmableDrops/properties/super",
                "type": "number",
                "title": "% of Super Missiles",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              },
              "powerbomb": {
                "$id": "#/items/properties/farmableDrops/properties/powerbomb",
                "type": "number",
                "title": "% of Power Bombs",
                "default": 0.0,
                "examples": [
                  0.0
                ]
              }
            }
          },
          "dims": {
            "$id": "#/items/properties/dims",
            "type": "object",
            "title": "Enemy Sprite Dimensions",
            "description": "Dimensions in pixels",
            "required": [
              "w",
              "h"
            ],
            "properties": {
              "w": {
                "$id": "#/items/properties/dims/properties/w",
                "type": "integer",
                "title": "Pixel Width",
                "default": 0,
                "examples": [
                  8
                ]
              },
              "h": {
                "$id": "#/items/properties/dims/properties/h",
                "type": "integer",
                "title": "Pixel Height",
                "default": 0,
                "examples": [
                  8
                ]
              }
            }
          },
          "freezable": {
            "$id": "#/items/properties/freezable",
            "type": "boolean",
            "title": "Freezable?",
            "description": "Can this Enemy be frozen by Ice Beam?",
            "default": false,
            "examples": [
              false
            ]
          },
          "grapplable": {
            "$id": "#/items/properties/grapplable",
            "type": "boolean",
            "title": "Grapplable?",
            "description": "Can Samus latch on to this enemy using Grapple beam?",
            "default": false
          },
          "farmable": {
            "$id": "#/items/properties/farmable",
            "type": "boolean",
            "title": "Farmable?",
            "description": "Can this enemy respawn over and over?",
            "default": false
          },
          "invul": {
            "$id": "#/items/properties/invul",
            "type": [ "array" ],
            "title": "Invulnerability",
            "description": "A list containing weapons and weapon categories that can't damage this enemy",
            "default": [],
            "items": {
              "type": "string",
              "pattern": "^(.*)$"
            }
          },
          "mult": {
            "$id": "#/items/properties/mult",
            "type": "object",
            "title": "Damage Multipliers",
            "description": "A list containing weapons and weapon categories, alongside a weapon multiplier that is applied to the base damage for that enemy",
            "default": {}
          }
        }
      }
    }
  }
}
